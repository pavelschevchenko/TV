        private void Button17_Click(object sender, EventArgs e)
        {
            try
            {
                canal = Convert.ToInt32(label1.Text);


                if (canal < 20)
                {
                    Canal(canal);

                }
                else
                {
                    canal = 0;
                    Canal(canal);
                }
            }
            catch
            {
                Canal(canal);
            }
           

               
            label1.Visible = false;
            s = " ";
        }

